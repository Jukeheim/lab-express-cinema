<div class="container">
    <div class="row">
        <h1>Ironhack Cinema</h1>
        <br>
        <h2>Click on the movie to check the showtimes</h5>

        {{#each movies}}
        
        <div class="card">
            <div class="col-4">
            <img src="{{image}}" alt="img">
            <h3>{{title}}</h3>
            <a href="/moviedetails/{{id}}"><button type="button" class="btn btn-light">SEE MORE</button></a>
            </div>
        </div>
        {{/each}}
    </div>
</div>